.hero
  background url('../img/Photos/brick_mansion.jpg')
  background-size cover
  background-position center center
  background-repeat no-repeat
  background-attachment fixed
  height 600px
  width 100%
  //animation hero 20s infinite linear

.team-hero
  .hero
    background url('../img/Photos/heashots/fullteam.JPG')
    background-size cover
    background-position center 0%
    height 800px


@keyframes hero {
  0% {
    background: url('../img/Photos/crane_mansion.jpg');
    background-size cover
    background-position top left
    background-repeat no-repeat
  }
  50%{
    background: url('../img/Photos/white_brick_mansion.jpg');
    background-size cover
    background-position top left
    background-repeat no-repeat
  }
  100%{
    background: url('../img/Photos/brick_mansion.jpg')
    background-size cover
    background-position top left
    background-repeat no-repeat
  }
}
