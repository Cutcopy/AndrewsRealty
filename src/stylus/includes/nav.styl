.title
  display none
.top-nav
  background alpha(black, 60%)
  text-align center
  position absolute
  width 100%

.nav-socials
  li
    list-style-type none
    display inline
    a
      text-align center
      text-decoration none
  svg
    height 20px
    width 20px

.icon-svg
    height 20px
    width 20px
    fill $primary-color
    &:hover
      fill $primary-hover

.nav-links
  list-style-type none
  li
    display inline
    padding 5px
    a
      text-decoration none
      font-weight bold


.brand-image
  max-width 400px
  width 100%
  margin-top 1rem
  display inline
