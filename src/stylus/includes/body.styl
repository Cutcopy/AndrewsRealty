body
  margin 0
  background white

a
  color $primary-color
  &:hover
    color $primary-hover

button
  background white
  border 1px solid #333
  border-radius 3px
  &:hover
    background black
    color $primary-color
    border 1px solid $primary-color

address
  font-style normal

//Responsive embed
.embed-container
  position relative
  padding-bottom 56.25%
  height 0
  overflow hidden
  max-width 700px
  max-height 394px
  min-width 320px
  height auto

.embed-container iframe,
.embed-container object,
.embed-container embed
  position absolute
  top 0
  left 0
  width 100%
  height 100%
