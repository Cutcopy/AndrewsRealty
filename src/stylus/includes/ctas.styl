.ctas
  display flex
  flex-direction row
  justify-content space-around
  align-items center
  align-items center
  flex-wrap wrap
  position relative
  bottom 150px
.cta
  background-color black
  height 300px
  width 300px
  max-width 300px
  text-align center
  display flex
  justify-content center
  align-items center
  align-content center
  margin 1em
  box-shadow 0px 0px 20px 5px alpha(black, 50%)
  a
    text-decoration none
    &:hover
      .border
        border 3px solid $primary-hover
      svg
        fill: $primary-hover
      span
        color $primary-hover

  .border
    border 3px solid $primary-color
    height 270px
    width 270px
    display flex
    justify-content center
    align-items center
    align-content center
    flex-direction column
    svg
      width 60%
      height 144px
      fill: $primary-color
      fill-rule evenodd
    span
      margin 1rem
      font-size 2.2rem
      font-family 'cinzel'


@media (max-width 600px) {
  .ctas {
    bottom: 0px;
  }
}
