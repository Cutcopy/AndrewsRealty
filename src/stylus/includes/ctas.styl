.ctas
  display flex
  flex-direction row
  justify-content space-around
  align-items center
  align-items center
  flex-wrap wrap
  position relative
  bottom 150px
.cta
  background-color black
  height 300px
  width 300px
  text-align center
  display flex
  justify-content center
  align-items center
  align-content center
  margin 1em
  box-shadow 0px 0px 20px 5px alpha(black, 50%)
  a
    text-decoration none
  .border
    border 3px solid $primary-color
    height 270px
    width 270px
    display flex
    justify-content center
    align-items center
    align-content center
    flex-direction column
    img
      width 60%
      height 144px
    span
      margin 1rem
      font-size 1.5rem
      font-family 'cinzel'
